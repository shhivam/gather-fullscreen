{
  "name": "Maximize screen sharing window",
  "version": "1.0",
  "description": "Maximize when using Gather's screen sharing function",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "declarativeContent",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_icon": "images/get_started16.png"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 3
}
